# IRST Library Environment Configuration Template
# Copy this file to .env and update with your settings

# Weights & Biases (optional)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=irst-library
WANDB_ENTITY=your_username_or_team

# GPU Settings
CUDA_VISIBLE_DEVICES=0

# Data paths
DATA_ROOT=./data
CHECKPOINTS_ROOT=./checkpoints
EXPERIMENTS_ROOT=./experiments

# Development settings
DEBUG=false
LOG_LEVEL=INFO

# Model serving (optional)
MODEL_SERVER_HOST=0.0.0.0
MODEL_SERVER_PORT=8000

# Database (optional)
DATABASE_URL=sqlite:///irst_library.db

# API Keys (optional)
HUGGINGFACE_TOKEN=your_hf_token_here

# Azure ML (optional)
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=your_resource_group
AZURE_WORKSPACE_NAME=your_workspace_name

# Model Registry (optional)
MODEL_REGISTRY_URL=your_model_registry_url
MODEL_REGISTRY_TOKEN=your_token

# Distributed Training (optional)
MASTER_ADDR=localhost
MASTER_PORT=12355
WORLD_SIZE=1
RANK=0
